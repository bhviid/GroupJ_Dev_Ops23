<ul class=messages>
    @if (TwitData.Any())
    {
        @foreach (var msgAuthor in TwitData)
        {
            <li>
                @* Replace text@example.com with msg.email, msg.author.email*@
                <img src=@Gravatars[msgAuthor.Author.email]>
                <p>
                    <strong>
                        <a href="@msgAuthor.Author.username">@msgAuthor.Author.username</a>
                    </strong>
                    @msgAuthor.Msg.Text
                    <small>&mdash; @msgAuthor.Msg.PubDate?.ToString("yyyy MM dd @ HH:mm", DateTimeFormatInfo.InvariantInfo) </small>
                </p>
            </li>
        }
    }
    else 
    {
        <li><em>There's no message so far.</em></li>
    }
</ul>

@code 
{
    [Parameter]
    public List<MsgDataPair> TwitData { get; set; }

    [Parameter]
    public Dictionary<string,string> Gravatars { get; set; }
}