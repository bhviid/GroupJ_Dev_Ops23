@page "/public"
@inject HttpClient http

<h2>public timeline - it is actually good</h2>
<TwitDisplayer Fetcher="@GetTwitData"/>

@code
{
    public async Task<List<MsgDataPair>> GetTwitData(int startIndex, int pageSize)
    {
        var d  = await http.GetFromJsonAsync<MsgDataPair[]>($"/minitwit?startIndex={startIndex}&pageSize={pageSize}") 
            ?? Array.Empty<MsgDataPair>();
        return d.ToList();
    }
}